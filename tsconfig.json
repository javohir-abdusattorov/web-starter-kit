{
    "compilerOptions": {
        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "experimentalDecorators": true,
        "lib": ["ES2020"],
        "types": [ "node" ],
        "outDir": "dist/",
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
